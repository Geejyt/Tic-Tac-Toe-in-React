{
	"root": true,
	"parser": "babel-eslint",
	"env": {
		"node": true,
		"es6": true,
		"jest/globals": true
	},
	"plugins": [
		"eslint-comments",
		"flowtype",
		"prettier",
		"react",
		"jest",
		"standard"
	],
	"extends": [
		"plugin:flowtype/recommended",
		"plugin:react/recommended",
		"eslint:recommended",
		"plugin:jest/recommended"
	],
	"globals": {
		"__webpack_public_path__": true,
		"__DEVTOOLS__": true,
		"__DEV__": true,
		"__dirname": false,
		"__fbBatchedBridgeConfig": false,
		"alert": false,
		"cancelAnimationFrame": false,
		"cancelIdleCallback": false,
		"clearImmediate": true,
		"clearInterval": false,
		"clearTimeout": false,
		"console": false,
		"document": false,
		"escape": false,
		"Event": false,
		"EventTarget": false,
		"exports": false,
		"fetch": false,
		"FormData": false,
		"global": false,
		"jest": false,
		"Map": true,
		"module": false,
		"navigator": false,
		"process": false,
		"Promise": true,
		"requestAnimationFrame": true,
		"requestIdleCallback": true,
		"require": false,
		"Set": true,
		"setImmediate": true,
		"setInterval": false,
		"setTimeout": false,
		"window": false,
		"XMLHttpRequest": false,
		"pit": false
	},
	"rules": {
		"standard/array-bracket-even-spacing": 1,
		"no-cond-assign": 2,
		"no-console": 1,
		"no-const-assign": 2,
		"no-constant-condition": 1,
		"no-control-regex": 2,
		"no-debugger": 2,
		"no-dupe-keys": 2,
		"no-empty": 1,
		"no-ex-assign": 2,
		"no-extra-boolean-cast": 2,
		"no-extra-parens": 0,
		"no-extra-semi": 2,
		"no-func-assign": 2,
		"no-inner-declarations": 0,
		"no-invalid-regexp": 2,
		"no-negated-in-lhs": 2,
		"no-obj-calls": 2,
		"no-regex-spaces": 2,
		"no-reserved-keys": 0,
		"no-sparse-arrays": 2,
		"no-unreachable": 2,
		"use-isnan": 2,
		"valid-jsdoc": 0,
		"valid-typeof": 2,
		"block-scoped-var": 1,
		"complexity": 1,
		"consistent-return": 1,
		"curly": 2,
		"default-case": 1,
		"dot-notation": 2,
		"eqeqeq": [2, "allow-null"],
		"guard-for-in": 1,
		"no-alert": 2,
		"no-caller": 2,
		"no-div-regex": 2,
		"no-else-return": 1,
		"no-eq-null": 1,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-fallthrough": 2,
		"no-floating-decimal": 2,
		"no-implied-eval": 2,
		"no-labels": 2,
		"no-iterator": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 1,
		"no-multi-str": 1,
		"no-native-reassign": 1,
		"no-new": 2,
		"no-new-func": 2,
		"no-new-wrappers": 2,
		"no-octal": 2,
		"no-octal-escape": 2,
		"no-proto": 2,
		"no-redeclare": 1,
		"no-return-assign": 2,
		"no-script-url": 2,
		"no-self-compare": 2,
		"no-sequences": 2,
		"no-unused-expressions": 1,
		"no-void": 2,
		"no-warning-comments": 1,
		"no-with": 2,
		"radix": 2,
		"semi-spacing": 2,
		"vars-on-top": 1,
		"wrap-iife": 1,
		"yoda": 2,
		"no-catch-shadow": 2,
		"no-delete-var": 2,
		"no-label-var": 2,
		"no-shadow": 2,
		"no-shadow-restricted-names": 2,
		"no-undef": 2,
		"no-undefined": 2,
		"no-undef-init": 2,
		"no-unused-vars": [
			2,
			{
				"vars": "all",
				"args": "none"
			}
		],
		"no-use-before-define": 1,
		"handle-callback-err": 2,
		"no-mixed-requires": 2,
		"no-new-require": 2,
		"no-path-concat": 2,
		"no-process-exit": 1,
		"no-restricted-modules": 2,
		"no-sync": 1,
		"eslint-comments/no-aggregating-enable": 2,
		"eslint-comments/no-unlimited-disable": 2,
		"eslint-comments/no-unused-disable": 2,
		"eslint-comments/no-unused-enable": 2,
		"flowtype/define-flow-type": 2,
		"flowtype/use-flow-type": 2,
		"prettier/prettier": [
			2,
			{
				"singleQuote": true
			}
		],
		"key-spacing": 1,
		"keyword-spacing": 2,
		"jsx-quotes": [1, "prefer-double"],
		"comma-spacing": 1,
		"no-multi-spaces": 1,
		"brace-style": 1,
		"camelcase": 1,
		"consistent-this": 2,
		"eol-last": 2,
		"func-names": 0,
		"func-style": 0,
		"new-cap": 0,
		"new-parens": 2,
		"no-nested-ternary": 1,
		"no-array-constructor": 2,
		"no-empty-character-class": 2,
		"no-lonely-if": 1,
		"no-new-object": 2,
		"no-spaced-func": 2,
		"no-ternary": 0,
		"no-trailing-spaces": 2,
		"no-underscore-dangle": 0,
		"no-mixed-spaces-and-tabs": 2,
		"quotes": [
			1,
			"single",
			{
				"allowTemplateLiterals": true
			}
		],
		"quote-props": 0,
		"semi": 2,
		"sort-vars": 1,
		"object-curly-spacing": [
			1,
			"always",
			{
				"arraysInObjects": false
			}
		],
		"space-in-parens": 1,
		"space-infix-ops": 2,
		"space-unary-ops": [
			2,
			{
				"words": true,
				"nonwords": false
			}
		],
		"max-nested-callbacks": 1,
		"one-var": 0,
		"wrap-regex": 1,
		"max-depth": 1,
		"max-len": [1, 150],
		"max-params": [1, { "max": 5 }],
		"max-statements": [
			1,
			{
				"max": 20
			},
			{
				"ignoreTopLevelFunctions": true
			}
		],
		"no-bitwise": 2,
		"no-plusplus": 1,
		"react/display-name": 2,
		"react/jsx-boolean-value": 1,
		"react/jsx-no-comment-textnodes": 2,
		"react/jsx-no-duplicate-props": 2,
		"react/jsx-no-undef": 2,
		"react/jsx-sort-props": 1,
		"react/jsx-uses-react": 2,
		"react/jsx-uses-vars": 2,
		"react/no-did-mount-set-state": 2,
		"react/no-did-update-set-state": 2,
		"react/no-multi-comp": 0,
		"react/no-string-refs": 2,
		"react/no-unknown-property": 1,
		"react/prop-types": 1,
		"react/react-in-jsx-scope": 2,
		"react/self-closing-comp": 2,
		"jest/no-disabled-tests": 2,
		"jest/no-focused-tests": 2,
		"jest/no-identical-title": 2,
		"jest/valid-expect": 2
	},
	"overrides": [
		{
			"files": ["Libraries*.js", "RNTester*.js", "jest*.js"],
			"rules": {
				"comma-dangle": 1
			}
		},
		{
			"files": ["local-cli*.js"],
			"rules": {
				"comma-dangle": 1,
				"lint/extra-arrow-initializer": 1,
				"no-alert": 1,
				"no-console-disallow": 1
			},
			"env": {
				"node": true
			}
		}
	]
}
